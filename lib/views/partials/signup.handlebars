<div class="container">

    <div class="box box-login">

        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- show any messages that come back with authentication -->
        {{#if message.length}}
            <div class="alert alert-danger">{{ message }}</div>
        {{/if}}

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" name="firstName" pattern="[\w\s]+" requried title="No special characters please">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" name="lastName" pattern="[\w\s]+" required title="No special characters please">
            </div>
            <div class="form-group">
                <label>email</label>
                <input type="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Signup</button>
        </form>
        <hr>
        <p>Already have an account? <a href="/login">Login</a></p>

    </div>

</div>